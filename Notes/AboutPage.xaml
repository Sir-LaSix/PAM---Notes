<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <Label 
            Text="Notes App V1.0!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image
              Source="images.png" 
               HeightRequest="185"
               Aspect="AspectFit"
               SemanticProperties.Description="logo do git" />
        <Button
                x:Name="EnviarGitBtn"
                Text="Ir para o github" 
                SemanticProperties.Hint="Leva ao github"
                Clicked="EnviarGitBtn_Clicked"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>